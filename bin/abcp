#! /usr/bin/env bash
tmux new -s abcp -d -n "vim"

tmux send-keys "cd ~/Development/parent.abcmouse.cn; vim" C-m
tmux send-keys ":e." C-m
tmux send-keys ":vsp" C-m

tmux resize-pane -D 10
tmux send-keys "sandbox" C-m
tmux send-keys "cd member.abcmouse.com" C-m

# open local
tmux new-window -t abcp:1 -n "local"
tmux split-window

# open sandbox
tmux new-window -t abcp:2 -n "box"
tmux send-keys ":e." C-m

# sshfs
tmux new-window -t abcp:3 -n "sshfs"

tmux send-keys "dev" C-m
tmux split-window -v
tmux select-pane -t 1
tmux send-keys "dev" C-m
tmux select-window -t 0
tmux attach -t abc

