#! /usr/bin/env bash
# setup a tmux session for beaker hacking
tmux new -s beak -d -n "vim"

tmux send-keys "cd ~/Development/beaker; vim" C-m
tmux send-keys ":e." C-m

# open beaker
tmux new-window -t beak:1 -n "beaker"
tmux select-pane -t 1
tmux send-keys "cd ~/Development/beaker" C-m
tmux send-keys "npm run start" C-m

# open dat
tmux new-window -t beak:2 -n "dat"
tmux select-pane -t 2
tmux send-keys "cd ~/Development/dat-sound" C-m
tmux send-keys "dat share" C-m

# open bash
tmux new-window -t beak:3 -n "bash"
tmux select-pane -t 3

tmux select-window -t 0
tmux attach -t beak
