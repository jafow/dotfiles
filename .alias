#!/usr/bin/env bash

# List declared aliases, functions

alias listaliases="alias | sed 's/=.*//'"
alias listfunctions="declare -f | grep '^[a-z].* ()' | sed 's/{$//'" # show non _prefixed functions

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../../"
alias g-="cd -"

alias tree="tree -A"
alias treed="tree -d"

alias xi='exit'
alias g="git"

alias dev="cd ~/Development"

# tmux defaults to tmux -2 for full color support
alias tmux='tmux -2'
alias tmxu='tmux'
alias tat='tmux attach -t $1'

# cd & ls a directory
alias cdl='cd $1;ls'

# alias vim as macvim on osx
if [ "$(uname -s)" == "Darwin" ]; then
    alias vim="mvim -v";
elif [ "$(uname -s)" = "Linux" ]; then
    alias vim="vim"
fi;

alias python='python3'

# sandbox aliases
alias sandbox='ssh jared.fowler.test.abcmouse.com'
alias vim-sandbox='vim scp://jared.fowler.test.abcmouse.com/ /home/jared.fowler/'
alias mntbox='sshfs jared.fowler.test.abcmouse.com:/home/jared.fowler ~/sandbox -oauto_cache,reconnect,defer_permissions,negative_vncache,noappledouble,volname=Sandbox'

# copy pwd to xsel or pbcopy based on OS
if [ "$(uname -s)" == "Linux" ]; then
  alias cpwd='pwd|tr -d "\n"|xsel --clipboard --input'
else
  alias cpwd='pwd|tr -d "\n"|pbcopy'
fi

# IP address
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"

# get current unix timestamp onto osx clipboard
alias uts="date +%s | pbcopy"

# One of @janmoesen’s ProTip™s
for method in GET HEAD POST PUT DELETE TRACE OPTIONS;
do
    alias "$method"="lwp-request -m '$method'"
done
